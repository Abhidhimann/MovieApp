<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/reviewAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HelloMan"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reviewCreatedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="2001-12-12"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/reviewContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="@string/tempText"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/reviewMore"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_below="@+id/reviewContent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-12dp"
            android:alpha="0.75"
            android:elevation="10dp"
            android:src="@drawable/down_arrow_more"
            app:tint="@color/white" />

        <ImageView
            app:tint="@color/white"
            android:id="@+id/reviewLess"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_below="@+id/reviewContent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-12dp"
            android:alpha="0.75"
            android:src="@drawable/review_up_arrow"
            android:visibility="gone" />
    </RelativeLayout>


</LinearLayout>